<h1>Restaurant new</h1>

<%= form_for @restaurant do |f| %>
  <%= field_set_tag do %>
    <%= label_tag 'name' %>
    <%= f.text_field :name %>
  <% end %>

  <%= field_set_tag do %>
    <%= label_tag 'description' %>
    <%= f.text_area :description %>
  <% end %>

  <%= field_set_tag do %>
    <%= label_tag 'Address #1' %>
    <%= f.text_field :address_1 %>
  <% end %>

  <%= field_set_tag do %>
    <%= label_tag 'Address #2' %>
    <%= f.text_field :address_2 %>
  <% end %>

  <%= field_set_tag do %>
    <%= label_tag 'Phone Number' %>
    <%= f.text_field :phone_number %>
  <% end %>

  <%= f.submit 'Create' %>
<% end %>
